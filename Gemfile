source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.6.3'

gem 'rails', '~> 5.2.0'
gem 'jquery-rails'
gem 'uglifier'
gem 'recaptcha', require: 'recaptcha/rails'

