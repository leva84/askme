
<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Теги</h1>
  </div>

  <div class="users-list-item">
    <div class="user-image-div user-image-div-small">

      <p id="notice"><%= notice %></p>

      <h1>Tags</h1>

      <table>
        <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= link_to tag.name %></td>
            <td><%= link_to 'Show', tag %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
