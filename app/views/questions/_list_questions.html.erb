<div class="column-3-4">
  <div class="user-questions buffer-both">
    <div class="questions-list">
      <% @questions.each do |question| %>
        <%= render partial: 'questions/question', object: question %>
        <% if question.author_id == nil || User.exists?(question.author_id) == false %>
          <%= 'вопрос задал: Гость' %>
        <% else %>
          <%= link_to "вопрос задал: @#{User.find(question.author_id).username}", user_url(question.author_id) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>